<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title><%= @presentation.title %></title>
	<meta name="viewport" content="width=1024">
	<link rel="stylesheet" href="/core/deck.core.css" type="text/css">
  <link rel="stylesheet" href="/themes/style/<%= @presentation.style %>.css" type="text/css">
  <link rel="stylesheet" href="/themes/transition/<%= @presentation.transition %>.css" type="text/css">
	<script src="/modernizr.custom.js"></script>
</head>
<body class="deck-container">

<%@presentation.slides.each do |slide| %>
  <div class="slide">
    <%= markdown slide.content %>
  </div>
<%end%>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.js"></script>
<script src="/core/deck.core.js"></script>
<script>
	$(function() {
		$.deck('.slide');
	});
</script>
</body>
</html>